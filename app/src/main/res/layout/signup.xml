<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_bgmerge"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginRight="120dp"
            app:srcCompat="@drawable/signUp_txt" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50"
            android:layout_height="20"
            android:layout_marginLeft="35"
            android:layout_marginTop="-20dp"
            android:layout_marginRight="50dp"
            app:srcCompat="@drawable/indicator_img" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250"
            android:layout_marginTop="-70"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/logInGrey_btn" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0"
            android:layout_marginTop="300"
            android:backgroundTint="#00FFFFFF"
            android:foregroundTint="#00FFFFFF"
            app:srcCompat="@drawable/signUp_btn" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10"
            android:layout_marginTop="-300"
            android:ems="10"
            android:hint="Signup with your email."
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextTextPassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10"
            android:layout_marginTop="30"
            android:ems="10"
            android:hint="Create new password"
            android:inputType="textPassword" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>